mixin infoList(title,value)
    div(class=styles.item)
        div(class=styles.title) #{title}
        div(class=styles.value) #{value}


div(class=styles.head)
    div(class=styles.left)
        | !{backIcon}
    div(class=styles.avatar)
        | !{avatarBlock}
        div(class=styles.login) #{login}
    div(class=styles.right)
        | !{menuButton}
div(class=styles.body)
    case renderStatus
        when "show"
            +infoList("ФИО", `${first_name} ${second_name}`)
            +infoList("Почта", email)
            +infoList("Телефон", phone)
        when "changePassword"
            | !{changePasswordForm}
        when "changeData"
            | !{changeDataForm}

div(class=styles.footer)
    | !{logoutIcon}


